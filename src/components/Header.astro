  <ul id="contact-info" class="two-columns">
    <li class="icon icon-phone">
      <span>{phoneNumber}</span>
    </li>
    <li class="icon icon-github">
      <a href="https://github.com/pablocru">github.com/pablocru</a>
    </li>
    <li class="icon icon-email">
      {
        import.meta.env.CONTACT_EMAIL ? (
